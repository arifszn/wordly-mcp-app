{
  "name": "wordly-mcp-app",
  "version": "1.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "wordly-mcp-app": "dist/server.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build:ui": "INPUT=mcp-app.html vite build",
    "build:server": "tsc",
    "build": "npm run build:ui && npm run build:server",
    "watch": "INPUT=mcp-app.html vite build --watch",
    "serve": "tsx server.ts",
    "start": "npm run build && node dist/server.js",
    "dev": "NODE_ENV=development concurrently 'npm run watch' 'npm run serve'"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "latest",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.3.4",
    "bun": "^1.3.2",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
